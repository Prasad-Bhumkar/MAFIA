{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./out",
    "rootDir": ".",
    "sourceMap": true
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "types": ["jest"],
  "exclude": ["node_modules"]
}