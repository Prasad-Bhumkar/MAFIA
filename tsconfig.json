{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./out",
    "rootDir": ".",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "jest", "vscode"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules"]
}
