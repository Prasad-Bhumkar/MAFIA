{
  "name": "mafia",
  "displayName": "MAFIA",
  "description": "Modern Architecture Framework & Intelligent Analyzer for Spring Boot applications",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "AI"
  ],
  "activationEvents": [
    "onCommand:mafia.showComponentVisualization",
    "onCommand:mafia.showQualityDashboard",
    "onCommand:mafia.analyzeFile",
    "onCommand:mafia.analyzeFolder",
    "onLanguage:java"
  ],
  "main": "./out/ExtensionMain.js",
  "contributes": {
    "commands": [
      {
        "command": "mafia.showComponentVisualization",
        "title": "Show Component Visualization",
        "category": "MAFIA"
      },
      {
        "command": "mafia.showQualityDashboard",
        "title": "Show Quality Dashboard",
        "category": "MAFIA"
      },
      {
        "command": "mafia.analyzeFile",
        "title": "Analyze Java File",
        "category": "MAFIA"
      },
      {
        "command": "mafia.analyzeFolder",
        "title": "Analyze Java Folder",
        "category": "MAFIA"
      },
      {
        "command": "mafia.aiSuggest",
        "title": "Get AI Suggestions",
        "category": "MAFIA AI"
      }
    ],
    "configuration": {
      "title": "MAFIA",
      "properties": {
        "mafia.qualityThresholds.coverage": {
          "type": "number",
          "default": 80,
          "description": "Minimum test coverage percentage"
        },
        "mafia.qualityThresholds.complexity": {
          "type": "number",
          "default": 10,
          "description": "Maximum cyclomatic complexity"
        },
        "mafiaAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI suggestions",
          "scope": "application"
        },
        "mafiaAI.model": {
          "type": "string",
          "default": "code-davinci-002",
          "description": "AI model to use for completions",
          "enum": [
            "code-davinci-002",
            "text-davinci-003"
          ],
          "scope": "application"
        },
        "mafiaAI.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Creativity of AI suggestions",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "dependencies": {
    "openai": "^4.90.0",
    "vscode-languageclient": "^8.1.0"
  },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "typescript": "^4.4.4"
    },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/mafia-extension.git"
  },
  "publisher": "your-publisher-name",
  "icon": "assets/icon.png",
  "keywords": [
    "spring",
    "java",
    "visualization",
    "architecture",
    "ai",
    "copilot"
  ]
}
